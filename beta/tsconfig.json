{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "listEmittedFiles": true,
        "listFiles": false,
        "newLine": "lf",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "pretty": false,
        "removeComments": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/",
        "**/,*.ts"
    ]
}
