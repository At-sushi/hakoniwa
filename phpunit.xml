<?xml version="1.0"?>
<phpunit
	backupGlobals="false"
	bootstrap="vendor/autoload.php"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	stopOnError="true"
	stopOnFailure="false"
	stopOnIncomplete="false"
	stopOnSkipped="false"
	stopOnRisky="false"
	verbose="false"
	>
	<testsuites>
		<testsuite name="money">
			<directory>tests</directory>
		</testsuite>
	</testsuites>
	<php>
		<ini name="DEBUG" value="true" />
	</php>
</phpunit>
